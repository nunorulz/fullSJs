<!DOCTYPE html>
<html lang="pt-br">

<head>
  <%- include('partials/head.ejs')%>
</head>

<body>
  <%- include('partials/header.ejs')%>
    <section class="container">
      <%- include('partials/navbar.ejs')%>
        <article class="content">
          <h1>Cadastro de posts</h1>
          <% if(cadastrado) { %>
            Cadastro realizado com sucesso
            <%}%>
              <form action="/salvar-post" method="post">
                <div>
                  <label>Título</label>
                  <input name="titulo" type="text" placeholder="Digite o título">
                </div>
                <div>
                  <label>Texto</label>
                  <textarea name="texto" id="" cols="30" rows="10"></textarea>
                </div>
                <div><button type="submit">Cadastrar post</button></div>
              </form>
        </article>
    </section>
    <%- include('partials/footer.ejs')%>
      <%- include('partials/foot.ejs')%>
</body>

</html>